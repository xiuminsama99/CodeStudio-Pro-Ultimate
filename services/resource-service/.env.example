# RESOURCE-SERVICE Environment Variables

# 服务配置
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# Redis配置 - 用于分布式资源状态管理
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# MongoDB配置 - 用于持久化存储
MONGODB_URL=mongodb://localhost:27017/codestudio

# CORS配置 - 允许的前端域名
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# 资源分配配置
BASE_PORT=8000
MAX_INSTANCES=100
PORT_RANGE_SIZE=100

# Kubernetes配置
K8S_NAMESPACE=codestudio
K8S_IMAGE=codestudio/vscode:latest

# 安全配置
API_KEY=
JWT_SECRET=your-jwt-secret-key-here
